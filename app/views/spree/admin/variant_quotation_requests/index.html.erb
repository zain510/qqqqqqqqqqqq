<% content_for :page_title do %>
  Variant Quotation Requests
<% end %>
<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_variant_quotation_request), new_object_url, { class: "btn-success", icon: 'add', id: 'admin_new_variant_quotation_request' } %>
<% end if can?(:create, Spree::VariantQuotationRequest) %>
<%= render partial: 'spree/admin/shared/index_table_options', locals: { collection: @collection } %>
<% if @open_variant_quotation_requests.any? || @closed_variant_quotation_requests.any? %>
  <h4>Open Variant Quotation Requests</h4>
  <%= render partial: 'table', locals: { variant_quotation_requests: @open_variant_quotation_requests } %>
  <br>
  <hr>
  <hr>
  <h4>Closed Variant Quotation Requests</h4>
  <%= render partial: 'table', locals: { variant_quotation_requests: @closed_variant_quotation_requests } %>
<% else %>
  <div class="alert alert-info alpha twelve columns no-objects-found">
    <%= Spree.t(:no_resource_found, resource: plural_resource_name(Spree::VariantQuotationRequest)) %>
  </div>
<% end %>
